<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.btmura.android.reddit"
    android:versionCode="3"
    android:versionName="2.0" >

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:backupAgent=".app.backup.BackupAgent"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".accounts.AccountAuthenticatorActivity"
            android:label="@string/add_account"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name=".app.BrowserActivity"
            android:clearTaskOnLaunch="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".app.CommentReplyActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ContentBrowserActivity"
            android:label="@string/content_browser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".app.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SettingsActivity"
            android:label="@string/settings_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SidebarActivity"
            android:theme="@android:style/Theme.Holo.Light.DialogWhenLarge" />
        <activity
            android:name=".app.SubmitLinkActivity"
            android:label="@string/submit_link_label"
            android:theme="@android:style/Theme.Holo.Light.DialogWhenLarge" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".app.ThingActivity" />
        <activity android:name=".app.ThingListActivity" />

        <activity-alias
            android:name=".MainActivity"
            android:targetActivity=".app.BrowserActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <provider
            android:name=".provider.Provider"
            android:authorities="@string/provider_authorities"
            android:exported="false" />

        <service
            android:name=".accounts.AccountAuthenticatorService"
            android:exported="true"
            android:permission="com.btmura.android.reddit.permission.AUTHENTICATE_ACCOUNTS" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name=".content.SyncAdapter$Service"
            android:exported="true"
            android:permission="@string/permission_sync_accounts" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>
        <service
            android:name=".provider.SyncOperationService"
            android:exported="false"
            android:permission="com.btmura.android.reddit.permission.SYNC_ACCOUNTS" />

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIf8pv0IsWSzrukJzjvXlDsBcXRwRCEFXVEjeQZw" />
    </application>

</manifest>