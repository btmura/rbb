<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AccountNameText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title" />

    <style name="AccountNameDropdownText" parent="@style/AccountNameText">
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="ButtonBarContainer">
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">beginning</item>
    </style>

    <style name="ButtonBar" parent="@android:style/Holo.ButtonBar.AlertDialog" />

    <style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- TODO: remove this style since it's not used anymore. -->
    <style name="PagerTitleStrip">
        <item name="android:background">#666666</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Inverse</item>
    </style>

    <style name="PagerTabStrip">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.ActionBar.Menu</item>
    </style>

    <style name="SlimProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="SubredditTitleText" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubredditStatusText" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThingLinkTitleText" parent="@style/SubredditStatusText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThingTitleText" parent="@style/SubredditTitleText" />

    <style name="ThingBodyText" parent="@style/SubredditTitleText" />

    <style name="ThingNewBodyText" parent="@style/ThingBodyText">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="ThingStatusText" parent="@style/SubredditStatusText" />

    <style name="ThingNeutralScoreText" parent="@style/SubredditStatusText">
        <item name="android:textColor">@color/score_text_neutral</item>
    </style>

    <style name="ThingUpScoreText" parent="@style/SubredditStatusText">
        <item name="android:textColor">@color/score_text_up</item>
    </style>

    <style name="ThingDownScoreText" parent="@style/SubredditStatusText">
        <item name="android:textColor">@color/score_text_down</item>
    </style>

    <style name="CommentTitleText" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommentBodyText" parent="@style/SubredditTitleText" />

    <style name="CommentStatusText" parent="@style/SubredditStatusText" />

    <style name="SidebarTitleText" parent="@style/CommentTitleText" />

    <style name="SidebarStatusText" parent="@style/CommentStatusText" />

    <style name="SidebarDescriptionText" parent="@style/CommentBodyText" />

    <style name="AccountLoginText" parent="@style/SubredditTitleText" />

    <!-- Style for a single line TextView row with padding. -->
    <style name="ListRowText" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountListRowText" parent="@style/ListRowText" />

    <style name="ContentUriRowText" parent="@style/ListRowText">
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="ContentRowText">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>