    <!--
    We need a theme to animate from a translucent look to a runtime determined theme. The stock 
    Translucent theme disables orientation changes on small screens, so we need to create our own 
    theme based off of a theme that has animations. 
    -->
    <style name="Theme.Transition" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="Theme.Transition.DialogWhenLarge" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

